	y*) 	gmw=1
		cont=true;;
	*)	gmw=0;;
esac
if $test "$cont" ; then
case "$gmwfontpath" in
'')
    dflt="/usr/local/gmw/font"
    ;;
*)  dflt="$gmwfontpath"
    ;;
esac
cont=true
while $test "$cont" ; do
	echo " "
	rp='GMWのフォントはどこに有りますか? '"[$dflt]"
	$echo $n "$rp $c"
	. myread
	gmwfontpath="$ans"
	dirs=$gmwfontpath
    	while test "$dirs" != "" ; do
		case $dirs in
			*:*)	
				dir=`$expr $dirs : '.*:¥([^:]*¥)'`
				dirs=`echo $dirs | $sed -e 's/:[^:]*$//'` ;;
			*)
				dir=$dirs
				dirs="" ;;
		esac
		case $dir in
			/*)	if test -d $dir; then
					cont=''
					echo " "
				else
					dflt=n
					$echo "$dir"'というディレクトリは存在しません。'
					rp='そのまま実行しますか?'" [$dflt]"
					$echo $n "$rp $c"
					. myread
					dflt=''
					case "$ans" in
						y*) cont='';;
						*)  dirs='';;
					esac
					echo " "
				fi
				;;
			*) echo '絶対パスで指定して下さい。'
				dirs=''
				echo " "
				;;
		esac
	done
done
case "$gmwfonts" in
'')
    dflt="kan14"
    ;;
*)  dflt="$gmwfonts"
    ;;
esac
