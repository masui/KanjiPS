	echo " "
	rp='bdfフォントはどこに有りますか? '"[$dflt]"
	$echo $n "$rp $c"
	. myread
	xfontpath="$ans"
	dirs=$xfontpath
    	while test "$dirs" != "" ; do
		case $dirs in
			*:*)	
				dir=`$expr $dirs : '.*:¥([^:]*¥)'`
				dirs=`echo $dirs | $sed -e 's/:[^:]*$//'` ;;
			*)
				dir=$dirs
				dirs="" ;;
		esac
		case $dir in
			/*)	if test -d $dir; then
					cont=''
					echo " "
				else
					dflt=n
					$echo "$dir"'というディレクトリは存在しません。'
					rp='そのまま実行しますか?'" [$dflt]"
					$echo $n "$rp $c"
					. myread
					dflt=''
					case "$ans" in
						y*) cont='';;
						*)  dirs='';;
					esac
					echo " "
				fi
				;;
			*) echo '絶対パスで指定して下さい。'
				dirs=''
				echo " "
				;;
		esac
	done
done
case "$xfonts" in
