while $test "$cont" ; do
	echo " "
	rp='PostScriptプリンタの解像度は何DPIですか？'"[$dflt]"
	$echo $n "$rp $c"
	. myread
	dpi="$ans"
	case "$dpi" in
	'') cont=true ;;
	*)  cont='';;
	esac
done
: ask whether GMW fonts exist
