: check whether "perl" exists
prog=perl
d_perl="$undef"
perlcomment="#"
for dir in $pth ; do
	if $test -f $dir/$prog; then
		d_perl="$define"
		perlcomment=""
		perlloc=$dir/$prog
		break
	fi
done
while $test "$perlloc" = '' ; do
	case "$perlloc" in
	'')
	    dflt="none"
	    ;;
	*)  dflt="$perlloc"
	    ;;
	esac
	echo " "
	rp='perl(2.14以降のもの)の絶対パスを指定して下さい '"[$dflt]"
	$echo $n "$rp $c"
	. myread
	perlloc="$ans"
	case $perlloc in
		/*)	if $test ! -f $perlloc; then
				echo "$perlloc"'は存在しません。'
				perlloc=''
			else
				perlcomment=""
			fi ;;
		*)	perlloc='' ;;
	esac
done
