    rp='GMWで使えるフォント名を指定して下さい。'"[$dflt]"
    $echo $n "$rp $c"
    . myread
    gmwfonts="$ans"
    case "$ans" in
    '') cont=true ;;
    *)  cont='';;
    esac
done
